<div class="container">
<div class="col-md-12">

<h2 class="mt-5 text-center">パスワードを忘れた場合</h2>

<%= form_with model: @user, url: user_password_path, method: :post, local: true do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
<p class="text-center mt-3">下記メールアドレスにパスワード再設定用のメールをお送りいたします。</p>
  <div class="field row justify-content-center mt-3">
    <%= f.label :email, "メールアドレス", class: "col-md-3" %><br />
    <%= f.email_field :email, autofocus: true, class: "col-md-3" %>
  </div>

  <div class="text-center mt-3">
    <%= f.submit "送信", class: "btn btn-outline-success" %>
  </div>
<% end %>

<div class="mt-2">
<%= render "public/shared/links" %>
</div>