
<%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>

<%= f.label :profile_image, "自分の写真" %>
<%= f.file_field :profile_image, class:"form-control-file", accept: "image/*" %>

<%= f.label :name, "名前" %>
<%= f.text_field :name, class:"form-control" %>

<%= f.label :kana_name, "ふりがな" %>
<%= f.text_field :kana_name, class:"form-control" %>

<%= f.label :user_name, "ユーザー名" %>
<%= f.text_field :user_name, class:"form-control" %>

<%= f.label :email, "メールアドレス" %>
<%= f.text_field :email, class:"form-control" %>

<%= f.submit '編集する',class:"btn btn-success" %>

<%= link_to "退会する", user_unsubscribe_path(@user), class:"btn btn-danger" %>

<% if @user.profile_image.attached? %>
<%= image_tag @user.profile_image, size: "80x80" %>
<% else %>
<%= image_tag 'no_image', size: "80x80" %>
<% end %>

<% end %>

<%= @user.name %>
<%= @user.kana_name %>
<%= @user.user_name %>
<%= @user.email %>
