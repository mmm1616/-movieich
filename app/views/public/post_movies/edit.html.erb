<div class="container">
    
 <div class="col-md-12">
     
  <h2 class="mt-5 text-center">投稿内容編集</h2>

  <%= form_with model: @post_movie, url: post_movie_path(@post_movie.id), method: :patch do |f| %>


   <div class="field row justify-content-center py-3">
    <%= f.label :title, "映画タイトル", class: "col-md-3 form-label" %>
    <%= f.text_field :title, class: "col-md form-control ml-3" %>
   </div>

   <div class="field row justify-content-center py-3">
    <%= f.label :situation_id, "シチュエーション", class: "col-md-3 form-label" %>
    <div class="col-md form-select">
     <%= f.collection_select :situation_id, Situation.all, :id, :name, :prompt => "-- 選択して下さい --" %>
    </div>
   </div>

   <div class="field row justify-content-center py-3">
    <%= f.label :story, "あらすじ",  class: "col-md-3 form-label" %>
    <%= f.text_area :story, class: "col-md form-control ml-3" %>
   </div>

   <div class="field row justify-content-center py-3">
    <%= f.label :site, "どこで見つかる？", class: "col-md-3 form-label" %>
    <div class="col-md form-select">
     <%= f.select :site, PostMovie.sites_i18n.keys.map{|k| [I18n.t("enums.post_movie.site.#{k}"), k]} %>
    </div>
   </div>

   <div class="field row justify-content-center py-3">
    <%= f.label :review, "レビュー", class: "col-md-3 form-label" %>
    <%= f.text_area :review, class: "col-md form-control ml-3" %>
   </div>

   <div class="field row justify-content-center py-3">
    <%= f.submit '編集する', class: 'btn btn-outline-dark' %>
   </div>

  <% end %>
  
 </div>
 
</div>