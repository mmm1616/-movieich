<%= form_with model: @situation, url: admin_situation_path(@situation.id), method: :patch do |f| %>

<div class="container">
 <div class="col-md-12 field row justify-content-center mt-5">
  <div><%= f.label :name, "シチュエーション", class: "mr-3" %></div>
  <div><%= f.text_field :name %></div>
  <div><%= f.submit '変更を保存', class: 'btn btn-outline-success ml-3' %></div>
 </div>
</div> 

<% end %>