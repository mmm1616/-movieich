
<div class="container">
 <div class="field row justify-content-center py-5">
  <h2>ログイン</h2>
 </div>

 <%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="field row justify-content-center py-3">
    <%= f.label :email, "メールアドレス", class: 'col-2' %><br />
    <%= f.email_field :email, class: 'col-5', autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  
  <div class="field row justify-content-center py-3">
    <%= f.label :password, "パスワード", class: 'col-2' %><br />
    <%= f.password_field :password, class: 'col-5', autocomplete: "current-password" %>
  </div>

  <div class="actions row justify-content-center py-3">
    <%= f.submit "ログイン", class: 'btn btn-outline-dark' %>
  </div>
  
 <% end %>

</div>


<%= render "admin/shared/links" %>

